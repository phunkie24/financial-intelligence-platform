# ==================== API KEYS ====================
# Baidu ERNIE API
QIANFAN_AK=your_baidu_access_key
QIANFAN_SK=your_baidu_secret_key
ERNIE_API_KEY=your_ernie_api_key

# News APIs (Existing)
NEWS_API_KEY=your_newsapi_key
GNEWS_API_KEY=your_gnews_key

# ==================== DATABASE ====================
DATABASE_URL=postgresql://user:pass@localhost:5432/financial_intel
# For development:
# DATABASE_URL=sqlite:///financial_intelligence.db

# ==================== FASTAPI ====================
APP_NAME=Financial Intelligence Platform
APP_VERSION=2.0.0
DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production
API_V1_PREFIX=/api/v1

# ==================== AI/ML ====================
# Model paths
ERNIE_MODEL_PATH=./models/ernie-financial-lora
PADDLEOCR_MODEL_PATH=./models/paddleocr-financial-qlora

# Vector DB
CHROMA_DB_PATH=./chroma_db
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Fine-tuning
HUGGINGFACE_TOKEN=your_hf_token
WANDB_API_KEY=your_wandb_key

# ==================== FILE STORAGE ====================
UPLOAD_FOLDER=./uploads
MAX_UPLOAD_SIZE=50  # MB
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg,docx,xlsx

# ==================== PERFORMANCE ====================
WORKERS=4
MAX_CONCURRENT_REQUESTS=100
TIMEOUT=300

# ==================== SCRAPING ====================
SCRAPE_INTERVAL_MINUTES=60
MAX_ARTICLES_PER_SOURCE=50

# ==================== CORS ====================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://phunkie24.github.io

# ==================== MONITORING ====================
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=INFO